    <script>
        let darkModeButton = document.getElementById("dark-mode-toggle");
        let darkModeIcon = document.getElementById("dark-mode-icon");

        function toggleDarkMode() {
            let documentRoot = document.documentElement;
            if(documentRoot.classList.contains("dark")) {
                documentRoot.classList.remove("dark");
                darkModeIcon.src = "icons/dark.png"
                localStorage.theme = 'light';
            }
            else{
                documentRoot.classList.add("dark");
                darkModeIcon.src = "icons/light.png"
                localStorage.theme = 'dark';
            }

        }
        function updateDarkModeIcon() {
            darkModeButton.addEventListener("click", toggleDarkMode);
            if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                darkModeIcon.src = "icons/light.png"
            } else {
                darkModeIcon.src = "icons/dark.png"
            }
        }    
        window.onload = updateDarkModeIcon();
    </script>
